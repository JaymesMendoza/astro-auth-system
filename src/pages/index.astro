---
import Layout from '@/layouts/Layout.astro';
import Navigation from '@/components/layout/Navigation.astro';
import Button from '@/components/ui/Button.astro';
import { getAuthContext } from '@/utils/auth';

// Get auth context for navigation
const auth = await getAuthContext(Astro);
---

<Layout title="Welcome to AuthSystem">
  <Navigation auth={auth} />
  
  <main class="flex-1">
    <!-- Hero Section -->
    <section class="relative bg-gradient-to-r from-blue-600 to-purple-700 dark:from-blue-800 dark:to-purple-900">
      <div class="absolute inset-0 bg-black opacity-20"></div>
      <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 lg:py-32">
        <div class="text-center">
          <h1 class="text-4xl md:text-6xl font-bold text-white mb-6">
            Secure Authentication System
          </h1>
          <p class="text-xl md:text-2xl text-blue-100 mb-8 max-w-3xl mx-auto">
            A comprehensive user management platform with JWT authentication, 
            role-based access control, and modern security features.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            {!auth.isAuthenticated ? (
              <>
                <a href="/auth/register">
                  <Button variant="primary" size="lg" class="bg-white text-blue-600 hover:bg-gray-100">
                    Get Started
                  </Button>
                </a>
                <a href="/auth/login">
                  <Button variant="outline" size="lg" class="border-white text-white hover:bg-white hover:text-blue-600">
                    Sign In
                  </Button>
                </a>
              </>
            ) : (
              <>
                <a href="/dashboard">
                  <Button variant="primary" size="lg" class="bg-white text-blue-600 hover:bg-gray-100">
                    Go to Dashboard
                  </Button>
                </a>
                {auth.isAdmin && (
                  <a href="/admin">
                    <Button variant="outline" size="lg" class="border-white text-white hover:bg-white hover:text-blue-600">
                      Admin Panel
                    </Button>
                  </a>
                )}
              </>
            )}
          </div>
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section class="py-20 bg-gray-50 dark:bg-gray-900">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
            Powerful Features
          </h2>
          <p class="text-lg text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
            Built with modern technologies and security best practices to provide 
            a robust authentication and user management solution.
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          <!-- Feature 1 -->
          <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-md">
            <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
              JWT Authentication
            </h3>
            <p class="text-gray-600 dark:text-gray-300">
              Secure token-based authentication with automatic refresh and session management.
            </p>
          </div>

          <!-- Feature 2 -->
          <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-md">
            <div class="w-12 h-12 bg-green-100 dark:bg-green-900 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
              Role-Based Access
            </h3>
            <p class="text-gray-600 dark:text-gray-300">
              Granular permission system with user and admin roles for proper access control.
            </p>
          </div>

          <!-- Feature 3 -->
          <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-md">
            <div class="w-12 h-12 bg-purple-100 dark:bg-purple-900 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.618 5.984A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.031 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
              Advanced Security
            </h3>
            <p class="text-gray-600 dark:text-gray-300">
              Password hashing, rate limiting, CSRF protection, and comprehensive audit logging.
            </p>
          </div>

          <!-- Feature 4 -->
          <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-md">
            <div class="w-12 h-12 bg-red-100 dark:bg-red-900 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-red-600 dark:text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
              Email Integration
            </h3>
            <p class="text-gray-600 dark:text-gray-300">
              Email verification, password reset, and notification system using Resend.
            </p>
          </div>

          <!-- Feature 5 -->
          <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-md">
            <div class="w-12 h-12 bg-yellow-100 dark:bg-yellow-900 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-yellow-600 dark:text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
              Modern UI/UX
            </h3>
            <p class="text-gray-600 dark:text-gray-300">
              Responsive design with dark mode support and beautiful components using Tailwind CSS.
            </p>
          </div>

          <!-- Feature 6 -->
          <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-md">
            <div class="w-12 h-12 bg-indigo-100 dark:bg-indigo-900 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-indigo-600 dark:text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
              Database Integration
            </h3>
            <p class="text-gray-600 dark:text-gray-300">
              SQLite database with Drizzle ORM for efficient data management and migrations.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 bg-white dark:bg-gray-800">
      <div class="max-w-4xl mx-auto text-center px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
          Ready to Get Started?
        </h2>
        <p class="text-lg text-gray-600 dark:text-gray-300 mb-8">
          Join thousands of developers using our secure authentication system.
        </p>
        {!auth.isAuthenticated && (
          <a href="/auth/register">
            <Button variant="primary" size="lg">
              Create Your Account
            </Button>
          </a>
        )}
      </div>
    </section>
  </main>

  <!-- Footer -->
  <footer class="bg-gray-900 text-white py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-4 gap-8">
        <div class="col-span-2">
          <h3 class="text-xl font-bold mb-4">AuthSystem</h3>
          <p class="text-gray-400 mb-4">
            A comprehensive authentication and user management system built with Astro, 
            featuring modern security practices and beautiful UI.
          </p>
        </div>
        <div>
          <h4 class="font-semibold mb-4">Features</h4>
          <ul class="space-y-2 text-gray-400">
            <li>JWT Authentication</li>
            <li>Role-Based Access</li>
            <li>Password Reset</li>
            <li>Admin Dashboard</li>
          </ul>
        </div>
        <div>
          <h4 class="font-semibold mb-4">Security</h4>
          <ul class="space-y-2 text-gray-400">
            <li>Rate Limiting</li>
            <li>CSRF Protection</li>
            <li>Audit Logging</li>
            <li>Secure Sessions</li>
          </ul>
        </div>
      </div>
      <div class="border-t border-gray-800 mt-8 pt-8 text-center text-gray-400">
        <p>&copy; 2024 AuthSystem. Built with Astro and modern security practices.</p>
      </div>
    </div>
  </footer>
</Layout>